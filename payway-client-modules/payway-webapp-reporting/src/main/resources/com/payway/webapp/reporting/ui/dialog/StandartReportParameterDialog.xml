<?xml version="1.0" encoding="utf-8"?>
<VerticalLayout xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" id="layoutStandartReportParameterDialog" width="100%" spacing="true" margin="true">
    
    <VerticalLayout id="layoutReportParameterContent" spacing="true" width="100%"/>   
          
    <VerticalLayout width="100%" spacing="true">

        <HorizontalLayout width="100%">
            <HorizontalLayout p:expandRatio="0" p:componentAlignment="MIDDLE_RIGHT" spacing="true">
                <FormLayout spacing="false" margin="false">
                    <ComboBox id="cbExportFormat" caption="Export to" width="200px" textInputAllowed="false" nullSelectionAllowed="false"/>
                </FormLayout>
            </HorizontalLayout>
        </HorizontalLayout>

        <HorizontalLayout width="100%">
            <HorizontalLayout p:expandRatio="0" p:componentAlignment="MIDDLE_RIGHT" spacing="true">
                <Button id="btnCancel" caption="Cancel"/>
                <Button id="btnExecute" caption="Execute" styleName="primary"/>
            </HorizontalLayout>
        </HorizontalLayout>

    </VerticalLayout>

</VerticalLayout>