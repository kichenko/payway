<?xml version="1.0" encoding="utf-8"?>
<CssLayout xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:cmp="urn:import:com.payway.advertising.ui.component" id="mainViewLayout" styleName="main-view">

    <HorizontalSplitPanel id="splitHorizontalPanel"/>

    <CssLayout id="layoutLeft" styleName="main-panel-left">

        <VerticalSplitPanel id="splitVerticalPanel"/>

        <CssLayout id="layoutSideBar" styleName="main-panel-left-layout-side-bar">
            <cmp:SideBarMenu id="sideBarMenu" sizeFull="true"/>
        </CssLayout>

        <CssLayout id="layoutUploads" styleName="main-panel-left-layout-uploads">
            <VerticalSplitPanel id="splitVerticalPanelUploads"/>

            <CssLayout id="layoutUploadTasks" styleName="main-panel-left-layout-upload-tasks">
                <cmp:UploadTaskPanel id="uploadTaskPanel" caption="Upload tasks" sizeFull="true"/>
            </CssLayout>

            <CssLayout id="layoutFileUpload" styleName="main-panel-left-layout-file-upload">
                <cmp:FileUploadPanel id="fileUploadPanel" caption="File upload zone"  sizeFull="true"/>
            </CssLayout>
        </CssLayout>

    </CssLayout>

    <CssLayout id="layoutRight" styleName="main-panel-right">
        <CssLayout id="panelHeader" styleName="main-panel-header">
            <HorizontalLayout id = "layoutToolBarLeft" styleName ="main-panel-header-toolbar-left">
                <MenuBar id="menuBar" styleName="main-user-menu"/>
            </HorizontalLayout>

            <HorizontalLayout id = "layoutToolBarRight" styleName ="main-panel-header-toolbar-right">
                <cmp:NotificationsButton id="btnNotifications" styleName="btn-notifications icon-only"/>
                <MenuBar id="userMenu" styleName="main-user-menu"/>
            </HorizontalLayout>
        </CssLayout>
        <CssLayout id="panelContent" sizeFull="true" styleName="main-panel-content"/>
        <CssLayout id="panelFooter" styleName="main-panel-footer"/>
    </CssLayout>
</CssLayout>