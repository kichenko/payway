<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/payway-advertising-webapp">
    <!--
    <Environment name="server.queue.name" type="java.lang.String" value="server-queue-app" override="true" />
    <Environment name="client.queue.name" type="java.lang.String" value="client-queue-app-1" override="true" />
    -->
    
    <!-- Db connection pool -->
    <Resource name="jdbc/payway-prod" auth="Container"
              type="com.jolbox.bonecp.BoneCPDataSource"
              factory="org.apache.naming.factory.BeanFactory"
              username="payway-prod"
              password="qwerty"
              jdbcUrl="jdbc:postgresql://127.0.0.1/payway-prod"
              driverClass="org.postgresql.Driver"
              idleConnectionTestPeriodInMinutes="60"
              idleMaxAgeInSeconds="240"
              minConnectionsPerPartition="2"
              maxConnectionsPerPartition="8"
              partitionCount="3"
              acquireIncrement="2"
              statementsCacheSize="50"
              statisticsEnabled="false"/>      
</Context>
